<% content_for :title do %>
    <%= t('.transfers') %>
<% end %>

<% content_for :page_title do %>
    <i class="glyphicon glyphicon-transfer"></i> <%= t('.transfers') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_stock_transfers.new_backend_transfer_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-3">
            <%= erp_form_control('dateranges', {
                name: ''
            }) %>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_stock_transfers.list_backend_transfers_path,
    keywords: [
        {
            text: t('.transfer_code'), name: 'erp_stock_transfers_transfers.code'
        },
        {
            text: t('.source_warehouse'),
            name: 'erp_warehouses_warehouses.name',
            select: {
                name: 'erp_stock_transfers_transfers.source_warehouse_id',
                data_url: erp_warehouses.dataselect_backend_warehouses_path
            }
        },
        {
            text: t('.destination_warehouse'),
            name: 'erp_warehouses_warehouses.name',
            select: {
                name: 'erp_stock_transfers_transfers.destination_warehouse_id',
                data_url: erp_warehouses.dataselect_backend_warehouses_path
            }
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-truck"></i> '+t('.receive'),
            url: '',
            data_method: 'PUT'
        },
    ],
    filters: [
        {
            text: t('.draft'), name: '', value: true, checked: false
        },
        {
            text: t('.active'), name: '', value: true, checked: false
        },
        {
            text: t('.received'), name: '', value: true, checked: false
        },
        {
            text: t('.deleted'), name: '', value: true, checked: false
        },
        {
            text: t('.void'), name: '', value: true, checked: false
        }
    ],
    columns: [
        {
            text: t('.code'), name: 'code', value: true, checked: true
        },
        {
            text: t('.received_at'), name: 'received_at', value: true, checked: true
        },
        {
            text: t('.source_warehouse'), name: 'source_warehouse', value: true, checked: true
        },
        {
            text: t('.destination_warehouse'), name: 'destination_warehouse', value: true, checked: true
        },
        {
            text: t('.quantity'), name: 'quantity', value: true, checked: true
        },
        {
            text: t('.note'), name: 'note', value: true, checked: false
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('.creator'), name: 'creator', value: true, checked: true
        },
        {
            text: t('.approver'), name: 'approver', value: true, checked: true
        },
        {
            text: t('.created_at'), name: 'created_at', value: true, checked: false
        }
    ]
) %>